<?xml version="1.0" encoding="UTF-8"?>

<!-- Define the variables in "$(var.*) expressions" -->
<?define Name = "musicDL" ?>
<?define Manufacturer = "musicDL" ?>
<?define Version = "1.0.0.0" ?>
<?define UpgradeCode = "A1B2C3D4-E5F6-7890-ABCD-123456789012" ?>

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
	<Package Name="$(Name)"
             Manufacturer="$(Manufacturer)"
             Version="$(Version)"
             UpgradeCode="$(var.UpgradeCode)"
             Compressed="true"
             InstallerVersion="500"
             Scope="perMachine">

		<!-- Set 64-bit platform -->
		<SummaryInformation Keywords="Installer,MSI,Database" Description="$(Name) Installer" />

		<!-- Set platform template -->
		<Media Id="1" Cabinet="Data1.cab" EmbedCab="yes" />
		<Property Id="ARPPRODUCTICON" Value="musicDL.exe" />
		<Property Id="ARPHELPLINK" Value="https://github.com/musicDL" />
		<Property Id="ARPURLINFOABOUT" Value="https://github.com/musicDL" />
		<Property Id="ARPNOMODIFY" Value="1" />
		<Property Id="ARPNOREPAIR" Value="1" />


		<!-- Allow upgrades and prevent downgrades -->
		<MajorUpgrade DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit." />

		<!-- Define the directory structure -->
		<StandardDirectory Id="ProgramFilesFolder">
			<!-- Create a folder inside program files -->
			<Directory Id="ROOTDIRECTORY" Name="$(var.Manufacturer)">
				<!-- Create a folder within the parent folder given the name -->
				<Directory Id="INSTALLFOLDER" Name="$(Name)" />
			</Directory>
		</StandardDirectory>

		<!-- The files inside this DirectoryRef are linked to
             the musicDL directory via INSTALLFOLDER -->
		<DirectoryRef Id="INSTALLFOLDER">

			<!-- Create components for the musicDL application -->
			<Component Id="MainExecutable">
				<File Id="musicDL.exe"
                      Source="$(var.musicDL.TargetDir)win-x64\publish\musicDL.exe"
                      KeyPath="true" />
				<RemoveFile Id="ALLFILES" Name="*.*" On="both" />
			</Component>

			<Component Id="FFmpegExecutable">
				<File Id="ffmpeg.exe"
                      Source="$(var.musicDL.TargetDir)win-x64\publish\ffmpeg.exe"
                      KeyPath="true" />
			</Component>

			<Component Id="YtDlpExecutable">
				<File Id="yt_dlp.exe"
                      Source="$(var.musicDL.TargetDir)win-x64\publish\yt-dlp.exe"
                      KeyPath="true" />
			</Component>

			<Component Id="SettingsFile">
				<File Id="setting.json"
                      Source="$(var.musicDL.TargetDir)win-x64\publish\setting.json"
                      KeyPath="true" />
			</Component>

			<Component Id="AlbumArtExtension">
				<File Id="AlbumArt.dll"
                      Source="$(var.AlbumArt.TargetDir)AlbumArt.dll"
                      KeyPath="true" />
			</Component>

			<Component Id="SharingExtension">
				<File Id="Sharing.dll"
                      Source="$(var.Sharing.TargetDir)Sharing.dll"
                      KeyPath="true" />
			</Component>

			<Component Id="ExtensionBase">
				<File Id="musicDL_Extension.dll"
                      Source="$(var.musicDL.Extension.TargetDir)musicDL.Extension.dll"
                      KeyPath="true" />
			</Component>
		</DirectoryRef>

		<!-- Tell WiX to install the files -->
		<Feature Id="MainApplication" Title="musicDL Setup" Level="1">
			<ComponentRef Id="MainExecutable" />
			<ComponentRef Id="FFmpegExecutable" />
			<ComponentRef Id="YtDlpExecutable" />
			<ComponentRef Id="SettingsFile" />
			<ComponentRef Id="AlbumArtExtension" />
			<ComponentRef Id="SharingExtension" />
			<ComponentRef Id="ExtensionBase" />
		</Feature>

	</Package>
</Wix>